{
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true,
    "paths": {
      "@mlkty/mt-shared-utils": ["../mt-shared-utils/src/index.ts"],
      "@mlkty/mt-design-headless": ["./src/index.ts"],
      "@mlkty/mt-design-headless/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "lib", "es"]
}
