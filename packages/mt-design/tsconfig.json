{
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "stripInternal": true,
    "paths": {
      "@mlkty/mt-shared-utils": ["../mt-shared-utils/src/index.ts"],
      "@mlkty/mt-design": ["./src/index.ts"],
      "@mlkty/mt-design/*": ["./src/*"],
      "@mlkty/mt-design-headless": ["../mt-design-headless/src/index.ts"],
      "@mlkty/mt-design-headless/*": ["../mt-design-headless/src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules", "lib", "es", "dist"]
}
